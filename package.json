{
  "name": "resume-modern",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write src/",
    "frontend": "npx vite --mode development",
    "backend": "cd backend && node server.js",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start:staging": "concurrently \"npm run backend:staging\" \"npm run frontend:staging\"",
    "start:prod": "concurrently \"npm run backend:prod\" \"npm run frontend:prod\"",
    "backend:staging": "cd backend && cross-env NODE_ENV=staging node server.js",
    "backend:prod": "cd backend && cross-env NODE_ENV=production node server.js",
    "frontend:staging": "npx vite --mode staging",
    "frontend:prod": "npx vite --mode production",
    "fresh": "rimraf node_modules backend/node_modules package-lock.json backend/package-lock.json && npm install && cd backend && npm install && cd .. && npm run start",
    "fresh:staging": "rimraf node_modules backend/node_modules package-lock.json backend/package-lock.json && npm install && cd backend && npm install && cd .. && npm run start:staging",
    "fresh:prod": "rimraf node_modules backend/node_modules package-lock.json backend/package-lock.json && npm install && cd backend && npm install && cd .. && npm run start:prod",
    "test:unit": "vitest",
    "check": "npm run lint && npm run format && npm run test:unit",
    "docker:build": "docker build -f docker/frontend/Dockerfile -t resume-frontend . && docker build -f docker/backend/Dockerfile -t resume-backend .",
    "docker:run": "docker-compose --env-file .env.development up -d",
    "docker:run:staging": "docker-compose --env-file .env.staging up -d",
    "docker:run:prod": "docker-compose --env-file .env.production up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:dev": "kubectl apply -f k8s/dev/",
    "k8s:staging": "kubectl apply -f k8s/staging/",
    "k8s:prod": "kubectl apply -f k8s/prod/",
    "k8s:delete": "kubectl delete -f k8s/dev/",
    "health": "node scripts/health-check.js",
    "health:staging": "node scripts/health-check.js",
    "health:prod": "node scripts/health-check.js",
    "docker:test": "node scripts/docker-test.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "bootstrap": "^5.3.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.18.5",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "~5.2.0",
    "vite": "^4.5.14",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.19"
  }
}
